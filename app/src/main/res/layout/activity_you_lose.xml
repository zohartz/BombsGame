<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="zohar.bombas.YouLose"
    android:id="@+id/lose"
    android:background="@drawable/you_lose"

    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="4mm"
            android:textStyle="bold"
            android:id="@+id/exScoLose"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="10dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/again"
            android:textColor="@color/amarillo"
            android:textStyle="bold"
            android:textSize="3mm"
            android:id="@+id/nuevo"
            android:onClick="deNuevo"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            />


        <Button
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="74dp"
            android:text="@string/seguir"
            android:textStyle="bold"
            android:onClick="backToSLevelScreen"
            android:id="@+id/button3"
            android:layout_row="2"
            android:layout_column="0"/>

    </GridLayout>




</RelativeLayout>
