<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuScreen"
    android:background="@drawable/dark_background_1">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_centerInParent="true"
        >


        <Button
            android:layout_width="30mm"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:id="@+id/button"
            android:onClick="goToModeScreen"
            android:background="@drawable/shape_6"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="15dp"
            />
        <Button
            android:layout_width="30mm"
            android:layout_height="wrap_content"
            android:text="@string/highscore"
            android:id="@+id/highScoreButton"
            android:onClick="goToHighScores"
            android:background="@drawable/shape_6"
            android:layout_column="0"
            android:layout_row="1"
            />



    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonbing_1"
        android:src="@drawable/bombing_1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
